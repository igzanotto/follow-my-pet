<div class="container mt-4 ml-auto">

  <div class="d-flex justify-content-between mb-3">
      <div class="p-2"><h1>Clinical History</h1></div>
      <div class="p-2 align-self-center h1"><i class="fa-solid fa-briefcase-medical"></i></div>
  </div>
  <hr>

  <div class="container bg-white rounded-4 mt-5 mb-4 p-3">
      <div class="container mt-3 mb-3">

        <div class="d-flex justify-content-between mb-3">
          <div class="p-2"><h2>Consultations</h2></div>
          <div class="p-2 d-flex justify-content-between">
            <% if current_user.type_of_user == "Veterinary" %>
              <div class="p-2 align-self-center"><%= link_to "Create new", new_pet_clinical_history_path, class: "btn btn-primary" %></div>
            <% end %>
            <div class="p-2"><%= link_to "Book an appointment", pet_veterinaries_path(@pet), class: "btn btn-primary" %></div>
          </div>
        </div>


        <div class="accordion" id="accordionExample">
          <% @clinical_histories.each do |ch| %>
            <div class="accordion-item">
              <h2 class="accordion-header" id="heading<%= ch.id %>">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= ch.id %>" aria-expanded="true" aria-controls="collapse<%= ch.id %>">
                  <div class="d-flex justify-content-between">
                    <div class="m-5 mt-0 mr-0 mb-0"><%= ch.date %></div>
                    <div class="m-5 mt-0 mr-0 mb-0"><%= ch.user.name %></div>
                    <div class="m-5 mt-0 mr-0 mb-0"><%= ch.name %></div>

                    <div class="m-4 mt-0 mr-0 mb-0 align-self-center">
                      <% if current_user.type_of_user == "Veterinary" %>
                        <%= link_to edit_pet_clinical_history_path(@pet, ch), class:"ms-3 text-primary" do %>
                          <i class="fa-solid fa-pen"></i>
                        <% end %>
                      <% end %>
                    </div>

                  </div>
                </button>
              </h2>
              <div id="collapse<%= ch.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= ch.id %>" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                  <%= ch.description %>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>

  <hr>

    <div class="container bg-white rounded-4 mt-4 p-3">
      <div class="container mt-3 mb-3">

        <div class="d-flex justify-content-between mb-3">
          <div class="p-2"><h2>Studies</h2></div>

          <div class="p-2 d-flex justify-content-between">
            <% if current_user.type_of_user == "Veterinary" %>
               <div class="p-2 align-self-center"><%= link_to "Create new", new_pet_study_path, class: "btn btn-primary" %></div>
            <% end %>
            <div class="p-2"><%= link_to "Book an appointment", pet_veterinaries_path(@pet), class: "btn btn-primary" %></div>
          </div>
        </div>

        <div id="accordion">

          <% @studies = [] %>
          <% @clinical_histories.each do |ch| %>
            <% if ch.study != nil  %>
              <% @studies << ch.study %>
            <% end %>
          <% end %>

          <% if @studies != [] %>

            <% @studies.each do |st| %>

              <div class="card">
                <h2 class="card-header" id="heading<%= st.id %>">
                  <div class="btn btn-link text-decoration-none">
                    <div class="d-flex justify-content-between">
                      <div class="m-5 mt-0 mr-0 mb-0 align-self-center"><%= st.clinical_history.date %></div>
                      <div class="m-5 mt-0 mr-0 mb-0 align-self-center"><%= st.name %></div>
                      <div class="m-5 mt-0 mr-0 mb-0 align-self-center"><%= st.clinical_history.user.name %></div>

                      <%# DOWNLOAD FILE %>
                      <% if st.photo.present? %>
                        <div class="m-5 mt-0 mr-0 mb-0 align-self-center">
                          <%= link_to cl_image_path(st.photo.key, flags: :attachment) do %>
                            <i class="fa-solid fa-file-arrow-down h5"></i>
                          <% end %>
                        </div>
                      <% end %>

                      <div class="m-4 mt-0 mr-0 mb-0 align-self-center">
                        <% if current_user.type_of_user == "Veterinary" %>
                          <%= link_to edit_pet_study_path(@pet, st), class:"ms-3 text-primary" do %>
                            <i class="fa-solid fa-pen"></i>
                          <% end %>
                        <% end %>
                      </div>

                    </div>
                  </div>
                </h2>
              </div>
            <% end %>

          <% else %>
            <p>No studies available yet</p>
          <% end %>

      </div>
    </div>

