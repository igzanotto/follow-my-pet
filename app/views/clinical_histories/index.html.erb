<div class="container">
  <h1>Clinical History</h1>

  <hr>
  <div class="container mt-3 mb-3">
    <h2>Consultations</h2>
    <div class="accordion" id="accordionExample">
      <% @clinical_histories.each do |ch| %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= ch.id %>">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= ch.id %>" aria-expanded="true" aria-controls="collapse<%= ch.id %>">
              <%= ch.date %>     <%= ch.name%>
            </button>
          </h2>
          <div id="collapse<%= ch.id %>" class="accordion-collapse collapse show" aria-labelledby="heading<%= ch.id %>" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <%= ch.description %>
            </div>
          </div>
        </div>
      <% end %>
  </div>

  <br>
  <hr>

  <div class="container mt-3">
    <h2>Studies</h2>
    <% if @studies != nil %>

      <% @studies.each do |s| %>

        <div id="accordion">
          <div class="card">
            <div class="card-header" id="headingOne">
              <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <%= s.name %>
                </button>
              </h5>
            </div>
        </div>
      <% end %>
      <% else %>
      <p>No studies available yet</p>
    <% end %>
  </div>

  <div>
    <%= link_to "Create new", new_pet_clinical_history_path, class: "btn btn-primary" %>
  </div>

</div>

<ul>
  <% @clinical_histories.each do |clinical_history| %>
    <li><%= clinical_history.description %></li>
  <% end %>
</ul>


<%= link_to "New Clinical History", new_pet_clinical_history_path %>
